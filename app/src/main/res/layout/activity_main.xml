<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- View Promotion Codes Button -->
    <Button
        android:id="@+id/btnViewPromotionCodes"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="View Promotion Codes"
        android:backgroundTint="#FF9800" /> <!-- Orange -->

    <!-- Add Prompt Code Button -->
    <Button
        android:id="@+id/btnAddPromptCode"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="Add Prompt Code"
        android:backgroundTint="#FF9800"  /> <!-- Green -->

    <!-- View Price Items Button -->
    <Button
        android:id="@+id/btnViewPriceItems"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="View Items"
        android:backgroundTint="#2196F3" /> <!-- Blue -->

    <!-- Add Price Item Button -->
    <Button
        android:id="@+id/btnAddPriceItem"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="Add Item"
        android:backgroundTint="#2196F3" /> <!-- Purple -->

</LinearLayout>
